<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".WelcomeActivity">
    <ImageView
        android:id="@+id/welcomeActivityImageViewId"
        android:src="@drawable/tour_guide"
        android:layout_width="130dp"
        android:layout_height="130dp" />
    <TextView
        android:id="@+id/welcomeActivityWelcomeTextViewId"
        android:text="@string/welcome_activity_welcome_text"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/welcomeActivityRewardTextViewId"
        android:text="@string/welcome_activity_reward_text"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>